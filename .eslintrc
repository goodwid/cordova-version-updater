{
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-mixed-spaces-and-tabs": [
      2,
      "smart-tabs"
    ],
    
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoreComments": true
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-in-parens": [
      "error"
    ],
    "space-infix-ops": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "comma-spacing": "error",
    "space-before-function-paren": [
      "error",
      { "asyncArrow": "always",
        "named": "never",
        "anonymous": "never"
      }
    ],
    "space-before-blocks": [
      "error",
      {
        "functions": "always"
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true,
        "overrides": {
          "if": {
            "after": false
          },
          "for": {
            "after": false
          },
          "while": {
            "after": false
          },
          "do": {
            "after": false
          },
          "catch": {
            "after": false
          },
          "switch": {
            "after": false
          }
        }
      }
    ],
    "array-bracket-spacing": "error",
    "eol-last": "error"
  }
}